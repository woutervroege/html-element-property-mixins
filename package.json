  "devDependencies": {
    "chai": "^4.3.4",
    "es-dev-server": "^2.1.0",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "mocha": "^8.4.0",
    "release-it": "^14.6.2"
  },
  "husky": {
